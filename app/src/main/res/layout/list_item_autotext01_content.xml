<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/textview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/dragHandleBar"
            android:text="test"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginRight="16dp"
            />
        <ImageView
            android:id="@+id/dragHandleBar"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:src="@drawable/align"
            android:layout_alignParentRight="true"
            />
    <Button
        android:id="@+id/btn_edit_semtence"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Edit sentence"
        android:textSize="12sp"
        android:layout_below="@+id/textview_content"
        android:textColor="#4188c7"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/btn_edit_semtence"
            android:background="#979797"
            />
    </RelativeLayout>
</RelativeLayout>